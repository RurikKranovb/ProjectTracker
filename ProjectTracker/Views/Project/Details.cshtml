@model IEnumerable<TaskViewModel>

@{
    ViewBag.Title = "Проект #" + Model.FirstOrDefault(model => model.ProjectId != 0)!.ProjectId;
}

<div class="container mt-4">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <table class="table table striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Приоритет</th>
                <th>Статус</th>
                <th>Срок сдачи</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Priority</td>
                    <td>@item.Status</td>
                    <td>@item.Deadline</td>
                </tr>
            }

        </tbody>
    </table>


</div>